<% monographic_breadcrumb("Recent Orders") %>
<% monographic_order_header "Recent Monographic Orders - " + current_user %>

<div>
    <%= link_to("New Order Request", new_monographic_order_path(), class: 'btn') %>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <a href="https://docs.google.com/document/d/18k8ayYgqFyFSvWRhtLk2c8UJYHFX2LYh9rw4ytjEuiM/export?format=pdf">Collection Checklist</a>
    &nbsp;&nbsp;|&nbsp;&nbsp;
    <a href="https://docs.google.com/spreadsheets/d/1W-6ghsVm5T4ijQVF_id8ogqMKkdRdDSq8BbntyJAKIg/export?format=xlsx">Request Spreadsheet for Multiple Titles</a>
</div>

<div class="ordersTable">
  <table id="orders_list" cellpadding="0" cellspacing="0" class="table table-striped table-bordered no-table-hover table-condensed">
    <thead>
        <tr>
            <th>Order Number</th>
            <th>Title</th>
            <th>Author</th>
            <th>Fund</th>
            <th>Attachments?</tb>
            <th>Date Submitted</th>
            <th>Last Updated</th>
        </tr>
    </thead>
    <tbody>
        <% @recent_orders.each do |order| %>
        <tr>
            <td style="text-align: center;"><%= link_to "#{order.id}", edit_monographic_order_path(order.id) %></td>
            <td nowrap><%= order.title %></td>
            <td><%= order.author %></td>
            <td><%= order.fund %></td>
            <td style="text-align: center;"><% if order.acquisition_order_attachments.present? %>Y<% else %>N<% end %></td>
            <td><%= order.created_at.strftime('%m/%d/%Y') %></td>
            <td><%= order.updated_at.strftime('%m/%d/%Y') %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>